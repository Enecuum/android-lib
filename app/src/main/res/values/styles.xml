<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/colorTextPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="DialogTheme.FullScreen" parent="AppTheme">
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="OvalGradientButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">54dp</item>
        <item name="android:paddingRight">54dp</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/background_oval_blue_gradient</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DarkOvalButton" parent="OvalGradientButton">
        <item name="android:background">@drawable/background_oval_dark_blue_gradient</item>
    </style>

    <style name="LargeWhiteText">
